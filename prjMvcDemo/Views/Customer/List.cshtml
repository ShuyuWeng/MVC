@using prjMvcDemo.Models
@model List<CCustomer>
@{
    ViewBag.Title = "List";
}

<h2>客戶資料一覽表</h2>
<p>
    <a href="~/Customer/create">+點我新增</a>
</p>
<table border="1">
    <tr>
        <td>序</td>
        <td>姓名</td>
        <td>電話</td>
        <td>電子郵件</td>
        <td>地址</td>
        <td>密碼</td>
    </tr>
    @{
        int count = 0;
        foreach (CCustomer t in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@t.fName</td>
                <td>@t.fPhone</td>
                <td>@t.fEmail</td>
                <td>@t.fAddress</td>
                <td>@t.fPassword</td>
            </tr>
        }
    }
</table>
